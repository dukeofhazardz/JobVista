<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>JobVista</title>
        <!-- Font Awesome -->
        <link
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
            rel="stylesheet" />
        <!-- Google Fonts -->
        <link
            href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
            rel="stylesheet" />
        <!-- MDB -->
        <link
            href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.2/mdb.min.css"
            rel="stylesheet" />
    </head>
    <body>

        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg sticky-top navbar-light bg-light mb-4">
            <!-- Container wrapper -->
            <div class="container-fluid">
                <!-- Toggle button -->
                <button
                    class="navbar-toggler"
                    type="button"
                    data-mdb-toggle="collapse"
                    data-mdb-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                    <i class="fas fa-bars"></i>
                </button>
                <a class="navbar-brand mt-2 mt-lg-0" href="/">
                        <img
                            src="https://www.creativefabrica.com/wp-content/uploads/2021/05/10/Job-Logo-Graphics-11872332-1.jpg"
                            height="60"
                            alt="jobvista Logo"
                            />
                        <h2 class="text-primary">JobVista</h2>
                    </a>

                <!-- Collapsible wrapper -->
                <div class="collapse navbar-collapse"
                    id="navbarSupportedContent">
                    <!-- Navbar brand -->
                    
                    <!-- Left links -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                         <li class="nav-item">
                                <a class="nav-link" href="/jobboard">Jobs</a>
                            </li>
                              <li class="nav-item">
                                <a class="nav-link" href="/users">People</a>
                            </li>
                          <% if (typeof user === 'undefined' ||(user.status && user.status == 404)) { %>
                      
                            <li class="nav-item">
                                <a class="nav-link" href="/signup">Signup</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/login">Login</a>
                            </li>
                        </li>
                    </ul>
                    <!-- Left links -->
                </div>
                <!-- Collapsible wrapper -->

                <!-- Right elements -->
                 <% } else { %>
                <div class="d-flex align-items-center">
                    <ul class="navbar-nav">
                     
                         <li class="nav-item">
                                <a class="nav-link" href="/myprofile">My profile</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/settings">Settings</a>
                            </li>
                            <li class="nav-item">
                                 <form action="/logout" method="POST">
       <button class="btn btn-link" type="submit">Logout <i class="fas fa-sign-out"></i> </button>
    </form>
                            </li>
                            
                           
                    </ul>
                 
                    <!-- Avatar -->
                    
                        <a
                            class="d-flex align-items-center hidden-arrow"
                            href="/myprofile"
                            role="button"
                         
                            aria-expanded="false">
                            <img
                                src="<%= (user.avatarPath) %>"
                                
                                class="rounded-circle"
                                height="40"
                                alt="avatar"
                                />
                        </a>
                        <% } %>
                    </div>
                </div>
                <!-- Right elements -->
            </div>
            <!-- Container wrapper -->
        </nav>
        <!-- Navbar -->

    
<% if(typeof message !== 'undefined' && message.length > 0) {%>
<div class="alert alert-info">
  <%= message  %>
</div>
<% } %>

   

   