<%- include('header') -%>
<h1>Hello <%- user.firstName -%></h1>

<div class="text-center center-div" id="settings">
    <div class="container w-25 border py-5">
        <div class="title pb-5">
            <h2 class="font-weight-bold">Settings</h2>
            <span>Update profile settings</span>
        </div>
        <form action="/settings" method="POST" class="pt-3" enctype="multipart/form-data">
            <div class="form-group">
                <input type="firstName" class="form-control" placeholder="First Name" name="firstName">
            </div>
            <div class="form-group">
                <input type="lastName" class="form-control" placeholder="Last Name" name="lastName">
            </div>
            <div class="form-group">
                <input type="phoneNo" class="form-control" placeholder="Phone Number" name="phoneNo">
            </div>
            <div class="form-group">
                <input type="address" class="form-control" placeholder="Address" name="address">
            </div>
            <div class="form-group">
                <input type="file" class="form-control" placeholder="Resume/CV" name="resume">
            </div>
            <button type="submit" class="btn btn-success rounded-pill">Submit</button>
        </form>
    </div>
</div>

<p>Back to <a href="/profile">profile</a></p>
<p>Go <a href="/">Home</a></p>
<form action="/logout" method="POST">
    <p>Leaving? <button type="submit">Logout</button></p>
</form>

<%- include('footer') -%>